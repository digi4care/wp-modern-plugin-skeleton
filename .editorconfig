# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files - WordPress uses tabs for indentation
[*.php]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false